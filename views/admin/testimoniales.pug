extends layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5 #{pagina}

        .row
            .col-md-12
                table.table.table-striped
                    thead
                        tr
                            th Nombre
                            th Correo
                            th Mensaje
                            th Acciones
                    tbody
                        each testimonial in testimoniales
                            tr
                                td= testimonial.nombre
                                td= testimonial.correo
                                td= testimonial.mensaje
                                td
                                    a(href="#" class="btn btn-danger btn-sm") Eliminar