doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{nombrepagina} | Panel de Administración
        link(rel="stylesheet", href="/css/bootstrap.css")
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")

    body
        header
            .navegacion.bg-dark
                .container
                    .row.justify-content-center.justify-content-md-between.align-items-center.py-4
                        .col-md-4.text-center.text-md-left
                            a(href="/admin")
                                img(src="/img/logo.svg", alt="Logo Admin")
                        .col-md-8
                            nav.mt-5.mt-md-0.nav.justify-content-center.justify-content-md-end
                                a.nav-link.text-white(href="/admin/viajes") Viajes 
                                a.nav-link.text-white(href="/") Ver Sitio 
        
        block contenido

        footer.container.py-3.mt-4.text-center.text-white.bg-dark
            .row
                .col-md-12
                    p Panel de Administración - #{actualYear}
                
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
        block scripts