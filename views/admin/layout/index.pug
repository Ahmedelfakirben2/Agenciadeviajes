doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{nombrepagina} | Panel de Administración
        link(rel="stylesheet", href="/css/bootstrap.css")
        link(rel="stylesheet", href="/css/style.css")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css")
    body
        header
            .navegacion.bg-dark
                .container
                    .row.justify-content-center.justify-content-md-between.align-items-center.py-4
                        .col-md-4.text-center.text-md-left
                            a(href="/admin")
                                img(src="/img/logo.svg", alt="Logo Admin")
                        .col-md-8.d-flex.align-items-center.justify-content-end
                            if currentUrl !== '/admin'
                                a.btn.btn-primary.me-3(href="/admin") Volver a Admin
                            .admin-buttons.d-flex
                                a.btn.btn-primary.me-2(href="/admin/viajes") Viajes
                                a.btn.btn-primary.me-2(href="/admin/guias") Guias
                                a.btn.btn-primary.me-2(href="/admin/hoteles") Hoteles
                                a.btn.btn-primary.me-2(href="/admin/testimoniales") Testimoniales
                                a.btn.btn-primary.me-2(href="/admin/reservas") Reservas
                                a.btn.btn-primary.me-2(href="/admin/ofertas") Ofertas
                            a.btn.btn-success.ms-3(href="/") Ver Sitio
        block contenido
            main.container.mt-5
                h1.text-center.mt-5 #{pagina}
        footer.container.py-3.mt-4.text-center.text-white.bg-dark
            .row
                .col-md-12
                    p Panel de Administración - #{actualYear}
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js")
        block scripts